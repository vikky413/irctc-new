<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Book your Reservation</title>

    <!-- Icons font CSS-->
    <link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">
    <script crossorigin="anonymous" src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!-- Main CSS-->
    <link href="css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <% var len = bks.length %>
                    <% var lens = station.length %>
                    <h2 class="title">RESERVATION FORM</h2>
                    <form action="/confirm-ticket" id="my-form" method="post">
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">From</label>
                                    <input class="input--style-4" type="text" name="sfrom" value="<%= station[lens-1].ftrain %>" disabled>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">To</label>
                                    <input class="input--style-4" type="text" name="sto" value="<%= station[lens-1].ttrain %>" disabled>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Train Name</label>
                                    <input class="input--style-4" type="text" value="<%= bks[len-1].tname %>" disabled name="trainname">
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Train Number</label>
                                    <input class="input--style-4" type="text" name="trainnumber" value="<%= bks[len-1].trnno %>" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Date Of Jurney</label>
                                    <div class="input-group-icon">
                                        <input  type="date" min='2023-04-21' max='2023-05-04' name="dob" class="input--style-4 ">
                                        
                                    </div>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Gender</label>
                                    <div class="p-t-10">
                                        <label class="radio-container m-r-45">Male
                                            <input type="radio" checked="checked" name="gender">
                                            <span class="checkmark"></span>
                                        </label>
                                        <label class="radio-container">Female
                                            <input type="radio" name="gender">
                                            <span class="checkmark"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="input-group">
                            <label class="label">Coach</label>
                            <div class="rs-select2 js-select-simple select--no-search">
                                <select name="coach">
                                    <option disabled="disabled" selected="selected">Choose option</option>
                                    <option>GN</option>
                                    <option>SL</option>
                                    <option>3AC</option>
                                    <option>2AC</option>
                                    <option>1AC</option>

                                </select>
                                <div class="select-dropdown"></div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-2"> 
                                <div class="input-group">
                                    <label class="label">First Name</label>
                                    <input class="input--style-4" type="text" maxlength="12" pattern="[A-Za-z]{3,}" name="fname" required>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Last Name</label>
                                    <input class="input--style-4" type="text" maxlength="12" pattern="[A-Za-z]{3,}" name="lname" required>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Age</label>
                                    <input class="input--style-4" type="number" maxlength="2" min="4" max="110" name="age" required>
                                </div>
                            </div>
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label">Phone Number</label>
                                    <input class="input--style-4" type="text" maxlength="10" pattern="[6-9]{1}[0-9]{9}" name="phone" required>
                                </div>
                            </div>


                        </div>
                        <div class="fields"></div>

                        <p>
                            <button type="button" class="add-fields" style="width: 221px; height: 47px; margin: 23px; background-color: blue;color: white;">
                               Add Passanger
                            </button>
                    
                            <button type="submit" style="width: 221px; height: 47px; margin: 23px;background-color: blue;color: white;">
                                Confirm
                            </button>
                        </p>
                    </form>
                    
                </div>
            </div>
        </div>
    </div>

    <script type="text/x-templates" id="fields-templates">
        <p class="input-fields" style="background-color: darkgrey;">
            <input name="passangers" type="text" maxlength="20" pattern="[A-Z a-z]{3,}" placeholder=" Enter your Name" style="margin: 13px;height: 40px; background-color: gainsboro;width: -webkit-fill-available;">
            <input name="pass_age" type="text" maxlength="2" pattern="[1-9]{1}[0-9]{1}" placeholder="  Enter Your Age" style="margin: 13px;height: 40px; background-color: gainsboro;width: auto">
            <button type="button" class="remove-fields" style="width: 210px; height: 27px;  background-color: red;color: white;margin-left: 251px;margin-bottom: 16px;">
                Remove Passanger
            </button>
        </p>
    </script>
    
    <script>
    $(function () {
        var FIELDS_TEMPLATE = $('#fields-templates').text();
        var $form = $('#my-form');
        var $fields = $form.find('.fields');
    
        $form.on('click', '.add-fields', function () {
            $fields.prepend($(FIELDS_TEMPLATE));
        });
    
        $form.on('click', '.remove-fields', function (event) {
            $(event.target).closest('.input-fields').remove();
        });
    });
    </script>
    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/datepicker/moment.min.js"></script>
    <script src="vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>
